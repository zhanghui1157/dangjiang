
.help-title{width: 80%;padding: 10rpx 0;margin:20rpx auto;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between;}
.help-list{-webkit-box-flex: 4;-webkit-flex: 4;flex: 4;}
