
page{background: #fff;}
.video-play{height: 300rpx;width: 100%;margin: 20rpx 0;}
.article-line{width: 100%;
}
.article-line image{width: 100%;height: 30rpx;}
video{width: 100%;height: 100%;}
.video-title-text{width: 100%;line-height: 40rpx;padding:20rpx 0;font-weight: bold;font-size: 14px;color: #000000;text-align: center;}
.video-title-detail{font-size: 12px;color: #B3B3B3;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between;height: 60rpx;line-height: 40rpx;}
.video-title-author{text-align:left;}
.video-title-time{text-align:right;}
.video-content{display: -webkit-box;display: -webkit-flex;display: flex;}
.video-content-title{line-height: 50rpx;color: #A1A1A1;-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.video-content-detail{line-height: 50rpx;color: rgba(254, 192, 115, 1);-webkit-box-flex:8;-webkit-flex:8;flex:8;}
.video-talk{width: 100%;margin: 10rpx 0;}
textarea{width: 100%;border: 1px solid #EAEAEA;border-radius: 10rpx;padding: 5rpx 2%;font-size: 12px;}
.add-btn{height: 80rpx;width: 100%;text-align: center;line-height: 80rpx;background: #e93a30;color: #fff;font-size: 16px;border-radius:15rpx;margin: 20rpx auto;}

