
page{background: #f0f0f0;}
.list-item{width: 48%;float: left;margin: 20rpx 1% 0 1%;border-radius: 10rpx;background: #fff;padding:10rpx;}
.list-title{width:96%;line-height: 50rpx;margin: auto;font-weight: bold;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.list-img{height: 240rpx;width: 96%;margin: auto;margin-top: 10rpx;}
.list-img image{width: 100%;height: 100%;border-radius: 10rpx;}
.list-time{width: 96%;text-align: right;font-size: 12px;color: #B3B3B3;margin: 10rpx auto;}

