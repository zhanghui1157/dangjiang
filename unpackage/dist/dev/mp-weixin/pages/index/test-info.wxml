<view class="content"><view class="test-list"><view class="test-title">{{exam.exam_title}}</view><view class="test-info"><view class="test-point">{{"积分："+exam.exam_integral}}</view><view class="test-time">{{"考试时长："+exam.exam_time+"分钟"}}</view><view class="test-end">{{"截止日期："+exam.exam_date}}</view></view><view class="clear"></view></view><block wx:if="{{exam_list}}"><view><block wx:for="{{exam_list}}" wx:for-item="item" wx:for-index="index"><view class="question-list"><view class="question-title">{{index+1+"."+item.questions_title+"（"+item.questions_type+"）"}}</view><view class="question-answer"><block wx:if="{{item.questions_type=='多选'}}"><view><block wx:for="{{item.questions_item}}" wx:for-item="val" wx:for-index="key"><view><view data-event-opts="{{[['tap',[['answerClick',['$0',key,'checkbox',index],[[['exam_list','',index,'questions_id']]]]]]]}}" class="question-answer-list" bindtap="__e"><view class="answer-list-check"><block wx:if="{{val.checked==true}}"><view class="answer-check-true"></view></block><block wx:else><view class="answer-check-false"></view></block></view><view class="answer-list-text">{{val.text}}</view></view></view></block></view></block><block wx:else><view><radio-group><block wx:for="{{item.questions_item}}" wx:for-item="val" wx:for-index="key"><label data-event-opts="{{[['tap',[['answerClick',['$0',key,'radio'],[[['exam_list','',index,'questions_id']]]]]]]}}" class="radio" bindtap="__e"><view class="question-answer-list"><radio class="answer-list-check" style="transform:scale(0.7);" color="#e93a30"></radio><view class="answer-list-text">{{val.text}}</view></view></label></block></radio-group></view></block></view></view></block><view class="footer"></view><view data-event-opts="{{[['tap',[['subAnswer']]]]}}" class="form-btn" bindtap="__e">提交</view></view></block><block wx:else><view class="no-data"><view class="no-data-icon icon iconfont">;</view><view class="no-data-text">暂无数据</view></view></block></view>