
page{background:#f3f3f3;}
.section-title{height: 50rpx;padding: 20rpx 0 60rpx 20rpx;}
.line-img{height: 30rpx;width: 10rpx;float: left;margin-top: 10rpx;}
.line-img image{height: 100%;width: 100%;}
.section-title-text{height: 50rpx;float: left;margin-left: 20rpx;font-size: 14px;font-weight: bold;line-height: 50rpx;color: rgba(252, 152, 118, 1);}
.news-more{width:20%;float: right;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: end;-webkit-justify-content: flex-end;justify-content: flex-end;color: #B3B3B3;line-height: 50rpx;padding-right: 20rpx;}
.news-more-text{font-size: 12px;}
.video-section{width: 93%;background: #fff;border-radius: 10rpx;padding: 15rpx;margin:auto;}
.head-video{width: 100%;border-radius: 10rpx;height: 300rpx;}
.head-video image{width: 100%;height: 100%;border-radius: 10rpx;}
.video-content{width: 97%;margin:10rpx auto;}
.video-list{width: 46%;margin: 10rpx 2%;float: left;background: #fff;border-radius: 10rpx;}
.video-list-content{width: 90%;height: 200rpx;margin:10rpx 5%;border-radius: 10rpx;}
.video-list-content image{width: 100%;height: 100%;border-radius: 10rpx;}
.head-video-title{line-height: 50rpx;height: 50rpx;width: 100%;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.head-video-time{width: 100%;text-align: right;color: #B3B3B3;font-size: 10px;}
.list-text{width:90%;padding:0 5% 20rpx 5%;clear:both;}
.video-info-detail{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between;}
.video-detail{-webkit-box-flex: 5;-webkit-flex: 5;flex: 5;text-align: right;font-size: 10px;color: #B3B3B3;float: left;height: 10rpx;line-height: 15rpx;padding: 0 20rpx 10rpx 0;}
.article-first{width: 94%;height: 250rpx;border-radius: 10rpx;display: -webkit-box;display: -webkit-flex;display: flex;background: #fff;margin: auto;}
.first-img{-webkit-box-flex: 4;-webkit-flex: 4;flex: 4;padding: 10rpx;}
.first-img image{height: 100%;width: 100%;border-radius: 10rpx;}
.first-content{-webkit-box-flex: 5;-webkit-flex: 5;flex: 5;font-size: 14px;line-height: 50rpx;padding: 0 10rpx;}
.article-list{width: 96%;margin:20rpx auto;}
.list-item{width: 31.3%;height: 210rpx;margin:10rpx 1%;background: #fff;border-radius: 10rpx;float: left;}
.list-img{height: 120rpx;width: 90%;margin:10rpx auto;}
.list-img image{height: 100%;width: 100%;border-radius: 10rpx;}
.list-title{width: 90%;margin: auto;font-size: 12px;text-align: center;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.list-time{width: 90%;text-align: right;font-size: 12rpx;color: #B3B3B3;line-height: 20rpx;padding: 10rpx 0;}
.list-icon{width: 90%;text-align: right;line-height: 30rpx;font-size: 12px;color: #B3B3B3}

