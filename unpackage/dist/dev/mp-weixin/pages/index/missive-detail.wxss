
.list-item{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;height: 100rpx;border-bottom: 1px solid #e8e8e8;}
.list-item:last-child{border: 0rpx;}
.item-text{-webkit-box-flex: 2;-webkit-flex: 2;flex: 2;height: 100rpx;line-height: 100rpx;color: #B3B3B3;}
.item-input{-webkit-box-flex: 8;-webkit-flex: 8;flex: 8;height: 100rpx;}
.item-input input{height: 100rpx;width: 100%;font-size: 14px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.form-item{width: 94%;margin: auto;}
.file-title{line-height: 50rpx;font-weight: bold;}
.file-list{padding: 20rpx 0;display: -webkit-box;display: -webkit-flex;display: flex;width: 100%;color: #B3B3B3;border-bottom: 1px solid #e8e8e8;}
.file-list:last-child{border: 0rpx;}
.file-name{-webkit-box-flex: 4;-webkit-flex: 4;flex: 4;overflow: hidden;}
.file-size{-webkit-box-flex: 2;-webkit-flex: 2;flex: 2;overflow: hidden;text-align:center;}
.file-del{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;text-align: center;text-align:center;}

