
.top-section{width: 100;height: 380rpx;background: -webkit-linear-gradient(top, #ff6600,#ffcc99);background: linear-gradient(top, #ff6600,#ffcc99);margin-top: 2rpx;z-index: 0;}
.intergral-info{display: -webkit-box;display: -webkit-flex;display: flex;height: 150rpx;box-shadow: 0px 0px 2px #D9D9D9;color: #fff;}
.intergral-text{-webkit-box-flex: 5;-webkit-flex: 5;flex: 5;text-align:right;line-height: 180rpx;}
.intergral-num{-webkit-box-flex: 7;-webkit-flex: 7;flex: 7;text-align:left;line-height: 160rpx;font-size: 30px;font-weight: bold;}
.intergral-order{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: center;-webkit-justify-content: center;justify-content: center;}
.intergral-order view{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;text-align: center;color: #fff;line-height: 100rpx;}
.intergral-data{width: 100%;border-radius: 90% 90% 0 0;margin-top: -120rpx;z-index: 1;background: #fff;}
.intergral-title{height: 120rpx;width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;line-height: 170rpx;border-bottom: 1px solid #e8e8e8;}
.intergral-title view{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;text-align: center;}
.intergral-list{width: 100%;}
.list-item{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;border-bottom: 1px solid #e8e8e8;}
.list-item:last-child{border: 0px;}
.intergral-list view{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;text-align: center;line-height: 60rpx;color: #B3B3B3;font-size: 12px;}

