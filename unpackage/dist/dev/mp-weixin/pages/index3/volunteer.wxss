
page{background: #f3f3f3;}
.tip-info{padding: 30rpx 0;width: 100%;color: #c1a47b;}
.tip-icon{width: 100%;text-align: center;font-size: 38px;color: #c1a47b;}
.tip-text{width: 100%;text-align: center;}
.section-item{width: 100%;background: #fff;padding: 10rpx 0;}
.check-case{width: 96%;margin:auto;display: -webkit-box;display: -webkit-flex;display: flex;padding: 20rpx 0;}
.check-case view{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.check-status{height: 100rpx;width: 100rpx;border-radius: 100%;background: #f3f3f3;margin: auto;text-align: center;line-height: 100rpx;}
.check-step{line-height: 100rpx;text-align: center;}
.now-status{background: red;color:#fff;}
.user-info{width: 96%;margin:auto;display: -webkit-box;display: -webkit-flex;display: flex;padding: 20rpx 0;}
.user-head{-webkit-box-flex: 2;-webkit-flex: 2;flex: 2;height: 150rpx;}
.user-head image{height: 100%;width:100%}
.user-detail{-webkit-box-flex: 8;-webkit-flex: 8;flex: 8;padding: 0 10rpx;}
.user-detail view{line-height: 50rpx;}
.user-name{width: 100%;font-weight: bold;}
textarea{height: 200rpx;width: 94%;margin: auto;padding: 10rpx;border-radius: 10rpx;border:1px solid #e8e8e8;font-size: 14px;}
.add-btn{height: 80rpx;width: 94%;margin: auto;text-align: center;line-height: 80rpx;background: #e93a30;color: #fff;font-size: 14px;border-radius:15rpx;margin: 100rpx auto;}

