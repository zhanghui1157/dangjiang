
page{background: #f3f3f3;}
.list-item{width: 94%;margin: 20rpx auto;padding: 20rpx 2%;border-radius: 10rpx;display: -webkit-box;display: -webkit-flex;display: flex;background: #fff;}
.list-img{-webkit-box-flex: 1.4;-webkit-flex: 1.4;flex: 1.4;padding-right: 20rpx;}
.list-img image{height: 100%;width: 100%;}
.list-info{-webkit-box-flex: 6;-webkit-flex: 6;flex: 6;}
.list-name{width: 100%;line-height: 60rpx;font-weight: bold;}
.list-identity{width: 100%;color: red;line-height: 60rpx;}
.list-detail{-webkit-box-flex: 1.5;-webkit-flex: 1.5;flex: 1.5;color: #B3B3B3;line-height: 100rpx;font-size: 12px;text-align: right;}
.nav-list{width: 100%;background: #fff;}
