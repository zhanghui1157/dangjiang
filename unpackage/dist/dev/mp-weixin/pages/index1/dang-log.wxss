    padding-bottom: 5px;
    background-color: #FDDD9B;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    text-align: center;
}
.update-tips-text {
    font-size: 14px;
