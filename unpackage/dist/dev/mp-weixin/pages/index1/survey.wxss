
.nav-list{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;height: 70rpx;-webkit-box-pack: justify;-webkit-justify-content: space-between;justify-content: space-between;border-bottom: 1px solid #e8e8e8;}
.nav-item{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.nav-text{width: 100%;height: 60rpx;text-align: center;line-height: 70rpx;}
.nav-line{width:40%;margin: auto;border-top: 1px solid #e93a30;}
.list-item{width: 96%;margin:20rpx auto;padding: 10rpx 2%;background: #fff;border-bottom: 1px solid #e8e8e8;}
.last-item:last-child{border-bottom: 0rpx;}
.list-title{font-size: 14px;width: 100%;line-height: 40rpx;padding-bottom: 20rpx;}
.list-content{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;}
.list-detail{-webkit-box-flex: 5;-webkit-flex: 5;flex: 5;}
.list-detail view{height: 40rpx;line-height: 40rpx;}
.check-status{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;line-height: 80rpx;}
.list-status{width:100%;height: 80rpx;}
.status-content{height: 50rpx;line-height: 45rpx;padding: 0 15rpx;border-radius: 25rpx;text-align: center;float: right;margin: 20rpx 0 20rpx 20rpx;border: 1px solid #ddd;}
.list-now{color: rgba(254, 192, 115, 1);}

