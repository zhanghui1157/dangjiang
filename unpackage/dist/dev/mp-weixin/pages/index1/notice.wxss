
page{background: #f3f3f3;}
.search-content{height: 100rpx;width: 100%;background: #fff;padding: 20rpx;}
.search-text{width: 96%;height: 60rpx;border-radius: 40rpx;background: #f3f3f3;margin: auto;padding:0 20rpx;font-size: 14px;}
.list-item{width:96%;margin: 10rpx auto;border-radius: 10rpx;padding: 10rpx;background: #fff;}
.list-title{width: 100%;display: -webkit-box;display: -webkit-flex;display: flex;}
.list-title-text{-webkit-box-flex: 4;-webkit-flex: 4;flex: 4;padding: 10rpx;}
.list-title-time{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;font-size: 12px;color: red;border-radius: 10rpx;height: 30rpx;line-height: 30rpx;margin-top: 10rpx;text-align: center;overflow: hidden;}
.list-content{width: 100%;line-height: 50rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.list-bottom{display: -webkit-box;display: -webkit-flex;display: flex;}
.list-checker{-webkit-box-flex:4;-webkit-flex:4;flex:4;line-height: 50rpx;font-size: 12px;color:#B3B3B3;}
.list-type{-webkit-box-flex:1;-webkit-flex:1;flex:1;line-height: 30rpx;padding: 10rpx;color:#B3B3B3;border-radius: 10rpx;font-size: 12px;text-align: center;}
.list-status{-webkit-box-flex:1;-webkit-flex:1;flex:1;border: 1px solid #e8e8e8;border-radius: 15rpx;font-size: 12px;height: 40rpx;text-align: center;line-height: 35rpx;margin: auto;}

