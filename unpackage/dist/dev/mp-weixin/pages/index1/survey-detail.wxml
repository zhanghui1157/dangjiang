<view class="content"><view class="test-list"><view class="test-title">{{exam.survey_title}}</view><view class="test-range">{{"问卷范围："+exam.party_name}}</view><view class="clear"></view></view><block wx:if="{{survey_info}}"><view><block wx:for="{{survey_info}}" wx:for-item="item" wx:for-index="index"><view class="question-list"><view class="question-title">{{index+1+"."+item.questions_title+"（"+item.questions_type+"）"}}</view><view class="question-answer"><block wx:if="{{item.questions_type=='多选'}}"><view><block wx:for="{{item.questions_item}}" wx:for-item="val" wx:for-index="key"><view><view data-event-opts="{{[['tap',[['answerClick',['$0',key,'checkbox',index],[[['survey_info','',index,'questions_id']]]]]]]}}" class="question-answer-list" bindtap="__e"><view class="answer-list-check"><block wx:if="{{val.checked==true}}"><view class="answer-check-true"></view></block><block wx:else><view class="answer-check-false"></view></block></view><view class="answer-list-text">{{val.text}}</view></view></view></block></view></block><block wx:else><view><radio-group><block wx:for="{{item.questions_item}}" wx:for-item="val" wx:for-index="key"><label data-event-opts="{{[['tap',[['answerClick',['$0',key,'radio'],[[['survey_info','',index,'questions_id']]]]]]]}}" class="radio" bindtap="__e"><view class="question-answer-list"><radio class="answer-list-check" style="transform:scale(0.7);" color="#e93a30"></radio><view class="answer-list-text">{{val}}</view></view></label></block></radio-group></view></block><view style="color:red;">{{''+item.desc+''}}</view></view></view></block><view class="footer"></view><block wx:if="{{status==0}}"><view data-event-opts="{{[['tap',[['subAnswer']]]]}}" class="form-btn" bindtap="__e">提交</view></block></view></block><block wx:else><view class="no-data"><view class="no-data-icon icon iconfont">;</view><view class="no-data-text">暂无数据</view></view></block></view>